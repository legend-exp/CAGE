   </physvol> -->
   <physvol>
     <file name="./geometries/Top_Hat.gdml"/>
     <position name="Top_Hat_Position" x="0" y="0" z="9.55" unit="mm"/>
     <rotationref ref="identity"/>
   </physvol>
